{% extends 'base.html.twig' %}


{% block titlepage %}User index{% endblock %}

{% block script %}
	<script src="{{ asset('admin/global_assets/js/plugins/tables/datatables/datatables.min.js') }}"> </script>
	<script src="{{ asset('admin/global_assets/js/demo_pages/datatables_basic.js') }}"> </script>   
{% endblock %}

{% block content %}

   <div class="content">
  
              
           
   <div class="card-header header-elements-inline" style="background-color:Teal" style="padding-bottom:100px">
  
						<h3 class="card-title" style="color:white">Liste des Responsables</h3>
                        <div class="header-elements"  >
							 <a class="btn btn-dark" style="width:170px" href="{{ path('app_responsable_new') }}"><i class="icon-user-plus"></i> Ajouter Responsable</a>
	                	</div>
                           </div>
                           
                           <div class="card">
						
							<div class="card-body">
    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
        
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
            
                <th>Roles</th>
                <th>Email</th>
            
                <th colspan="6">actions</th>
            </tr>
        </thead>
        <tbody>
       
        {% for user in users %}
        {%  if  user.roles==["ROLE_RESPONSABLE"]%}
            <tr>
               
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.telephone }}</td>
              
                <td>{{  user.roles ? user.roles|json_encode : ''}}</td>
                <td>{{ user.email }}</td>
           
                 <td colspan="6">
                     {{ include('responsable/show.html.twig') }}
                   
                    {{ include('responsable/_delete_form.html.twig') }}
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
              
        {% endfor %}
      
        </tbody>
    </table>

{% endblock %}