{% extends 'base.html.twig' %}
{% block style %}{% endblock %}
{% block titlepage %}Randonnée index{% endblock %}

{% block script %}
	<script src="{{ asset('admin/global_assets/js/plugins/tables/datatables/datatables.min.js') }}"> </script>
	<script src="{{ asset('admin/global_assets/js/demo_pages/datatables_basic.js') }}"> </script>   
{% endblock %}

{% block content %}

   <div class="content">
  
              
           
   <div class="card-header header-elements-inline" style="background-color:Teal" style="padding-bottom:100px">
  
						<h3 class="card-title" style="color:white">Liste des Randonnées</h3>
                        <div class="header-elements"  >
							 <a class="btn btn-dark" style="width:150px" href="{{ path('app_rondonnee_new') }}"><i class="icon-user-plus"></i> Ajouter Randonnee</a>
	                	</div>
                           </div>
                           
                           <div class="card">
						
							<div class="card-body">
    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
               
                <th>Prix</th>
                <th>Inclus</th>
                <th>Non_Inclus</th>
                    <th colspan="2">Images</th>
                <th colspan="3">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rondonnee in rondonnees %}
            <tr>
                <td>{{ rondonnee.id }}</td>
                <td>{{ rondonnee.title }}</td>
               
                <td>{{ rondonnee.prix }}</td>
                <td>{{ rondonnee.inclus }}</td>
                <td>{{ rondonnee.NonInclus }}</td>
                   <td colspan="2">
                 <center>
                {% for image in rondonnee.images|slice(0, 1) %}
               <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">
                      
        {% endfor %}
       </center>
               </td>
             
                <td colspan="3">
                <center>
                     {{ include('rondonnee/show.html.twig') }}
                     <a class="btn edit btn-info"  href="{{ path('app_rondonnee_edit', {'id': rondonnee.id}) }}"style="width:40px"><i class="icon-pencil"></i></a>
                    {{ include('rondonnee/_delete_form.html.twig') }}
                   </center>
            </td>
            </tr>
               
        {% else %}
        
            <tr>
                <td colspan="5">no records found</td>
            </tr>
             
       {% endfor %} 
        </tbody>
         
    </table>
  
    
{% endblock %}