{% extends 'base.html.twig' %}


{% block titlepage %}User index{% endblock %}

{% block script %}
	<script src="{{ asset('admin/global_assets/js/plugins/tables/datatables/datatables.min.js') }}"> </script>
	<script src="{{ asset('admin/global_assets/js/demo_pages/datatables_basic.js') }}"> </script>   
{% endblock %}

{% block content %}

   <div class="content">
  
              
           
   <div class="card-header header-elements-inline" style="background-color:Teal" style="padding-bottom:100px">
  
						<h3 class="card-title" style="color:white">Liste des Agents</h3>
                        <div class="header-elements"  >
							 <a class="btn btn-dark" style="width:150px" href="{{ path('app_agent_new') }}"><i class="icon-user-plus"></i> Ajouter Agent</a>
	                	</div>
                           </div>
                           
                           <div class="card">
						
							<div class="card-body">
    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
        
        <thead>
            <tr>
              <th>ID</th>
                <th>Nom</th>
                <th>Prenom</th>
              
            
               
          
                <th>Email</th>
                    <th>Agence de voyage</th>
                <th colspan="4">actions</th>
            </tr>
        </thead>
        <tbody>
       
        {% for user in users %}
        {%  if  user.roles==["ROLE_AGENT"]%}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
         
              
           
                <td>{{ user.email }}</td>
               <td>{{ user.agence.nom }}</td>
                 <td colspan="4">
                     {{ include('agent/show.html.twig') }}
                   
                    {{ include('agent/_delete_form.html.twig') }}
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
              
        {% endfor %}
      
        </tbody>
    </table>

   
{% endblock %}