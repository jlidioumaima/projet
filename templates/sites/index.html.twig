{% extends 'base.html.twig' %}

{% block script %}
	<script src="{{ asset('admin/global_assets/js/plugins/tables/datatables/datatables.min.js') }}"> </script>
	<script src="{{ asset('admin/global_assets/js/demo_pages/datatables_basic.js') }}"> </script>   
{% endblock %}

{% block content %}

   <div class="content">
  
              
           
   <div class="card-header header-elements-inline" style="background-color:Teal" style="padding-bottom:100px">
  
						<h3 class="card-title" style="color:white">Liste des sites</h3>
                        <div class="header-elements"  >
							 <a class="btn btn-dark" style="width:150px" href="{{ path('app_sites_new') }}"><i class="icon-user-plus"></i> Ajouter un Site</a>
	                	</div>

                           </div><br>
                           
                           <div class="card">
						
							<div class="card-body">
    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0"  ="grid" aria-describedby="DataTables_Table_0_info">
        <thead>
            <tr>
              <th>Nom</th>
                <th>Type</th>
              <th>Description</th>
                <th>Pays</th>
                
                    <th colspan="2">Images</th>
                <th colspan="2">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
              <td>{{ site.nom }}</td>
                <td>{{ site.type }}</td>
                   <td>{{ site.description }}</td>
                <td>{{ site.pays.nom }}</td>
                 <td colspan="2"><center>
                {% for image in site.images|slice(0,1) %}
                <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="100">
                                {% endfor %}
                                <center></td>
                 <td colspan="2">
                  {{ include('sites/show.html.twig') }}
                   
                     <a class="btn edit btn-warning"  href="{{ path('app_sites_edit', {'id': site.id}) }}"style="width:40px"><i class="icon-pencil"></i></a>
                {{ include('sites/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
