{% extends 'base.html.twig' %}

{% block titlepage %}Omra{% endblock %}

{% block content %}
<div class="content">
  
              
           
   <div class="card-header header-elements-inline" style="background-color:Teal" style="padding-bottom:100px">
  
						<h3 class="card-title" style="color:white">Details du Croisiere :{{croisiere.title}}</h3>
                        <div class="header-elements"  >
							 <a class="btn btn-dark" style="width:150px" href="{{ path('app_croisiere_index') }}"><i class="icon-user-plus"></i> Liste des Croisiere</a>
	                	</div>

                           </div><br>
                           
                           <div class="card">
						
							<div class="card-body">
    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0"  ="grid" aria-describedby="DataTables_Table_0_info">
  
        <tbody>
            
            <tr>
                <th>Id</th>
                <td>{{ croisiere.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ croisiere.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ croisiere.description }}</td>
            </tr>
            <tr>
                <th>TotalRate</th>
                <td>{{ croisiere.totalRate }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ croisiere.prix }}</td>
            </tr>
            <tr>
                <th>Inclus</th>
                <td>{{ croisiere.inclus }}</td>
            </tr>
            <tr>
                <th>Non_Inclus</th>
                <td>{{ croisiere.NonInclus }}</td>
            </tr>
            <tr>
                <th>Excursion</th>
                <td>{{ croisiere.excursion }}</td>
            </tr>
         <tr>
                                   <th>Images</th>
                                  
                                   <td>
                            {% if app.request.attributes.get('_route') == 'app_croisiere_show' %}
  
      
        
   {% for image in croisiere.images %}
            <div>
           
                <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="90" height="90">

                {# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
                
            </div>
        {% endfor %}
        </td></tr>
        {%endif%}
        </tbody>
    </table>
        </div>
     

    
   


{% endblock %}
