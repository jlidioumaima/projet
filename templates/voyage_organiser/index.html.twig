{% extends 'base.html.twig' %}
{% block style %}{% endblock %}
{% block titlepage %}VoyageOrganiser index{% endblock %}

{% block script %}
	<script src="{{ asset('admin/global_assets/js/plugins/tables/datatables/datatables.min.js') }}"> </script>
	<script src="{{ asset('admin/global_assets/js/demo_pages/datatables_basic.js') }}"> </script>   
{% endblock %}

{% block content %}

   <div class="content">
  
              
           
   <div class="card-header header-elements-inline" style="background-color:Teal" style="padding-bottom:100px">
  
						<h3 class="card-title" style="color:white">Liste des VoyageOrganisers</h3>
                        <div class="header-elements"  >
							 <a class="btn btn-dark" style="width:190px" href="{{ path('app_voyage_organiser_new') }}"><i class="icon-user-plus"></i> Ajouter VoyageOrganiser</a>
	                	</div>
                           </div>
                           
                           <div class="card">
						
							<div class="card-body">
    <table class="table datatable-basic dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
        <thead>
            <tr>
               
                <th>Title</th>
               
                <th>Prix</th>
                <th>Inclus</th>
                <th>Non_Inclus</th>
                <th>Images</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyage_organiser in voyage_organisers %}
            <tr>
               
                <td>{{ voyage_organiser.title }}</td>
                
                <td>{{ voyage_organiser.prix }}</td>
                <td>{{ voyage_organiser.inclus }}</td>
                <td>{{ voyage_organiser.NonInclus }}</td>
       
               <td colspan="2">
                 <center>
                {% for image in voyage_organiser.images|slice(0, 1) %}
               <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">
                      
        {% endfor %}
       </center>
               </td>
             
                <td colspan="3">
                     {{ include('voyage_organiser/show.html.twig') }}
                     <a class="btn edit btn-info"  href="{{ path('app_voyage_organiser_edit', {'id': voyage_organiser.id}) }}"style="width:40px"><i class="icon-pencil"></i></a>
                    {{ include('voyage_organiser/_delete_form.html.twig') }}
                   </center>
            </td>
            </tr>
               
        {% else %}
        
            <tr>
                <td colspan="5">no records found</td>
            </tr>
             
       {% endfor %} 
        </tbody>
         
    </table>
  
    
{% endblock %}